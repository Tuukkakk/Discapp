<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Discapp.MainPage"
             Title="Friba tuloskortti">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#111111" Offset="0.0" />
            <GradientStop Color="#1B6AA1" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <StackLayout Padding="20" Spacing="15" VerticalOptions="CenterAndExpand">
        <Button Text="Aloita kierros" VerticalOptions="Center" Clicked="OnStartButtonClicked" />
        <Button Text="Hallitse pelaajia" VerticalOptions="Center" Clicked="OnManagePlayersButtonClicked" />
        <Button Text="Tallennetut kierrokset" VerticalOptions="Center" Clicked="OnSavedRoundsButtonClicked" />
        <Button Text="Poistu" Clicked="OnExitButtonClicked" TextColor="White" HorizontalOptions="Center" Padding="20" Margin="10"/>
    </StackLayout>

    
</ContentPage>
